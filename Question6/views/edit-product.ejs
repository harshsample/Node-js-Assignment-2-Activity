<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Product</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Edit Product</h1>
  <form action="/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data">
    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" value="<%= product.name %>" required>

    <label for="description">Description:</label>
    <textarea id="description" name="description" rows="4"><%= product.description %></textarea>

    <label for="category">Category:</label>
    <select id="category" name="category" required>
      <% categories.forEach(category => { %>
        <option value="<%= category._id %>" <%= product.category.equals(category._id) ? 'selected' : '' %>><%= category.name %></option>
      <% }); %>
    </select>

    <label>Current Images:</label>
    <div class="product-images">
      <% product.images.forEach(image => { %>
        <img src="<%= image %>" alt="Product Image">
      <% }); %>
    </div>

    <label for="images">Upload New Images (optional):</label>
    <input type="file" id="images" name="images" multiple>

    <button type="submit">Update Product</button>
  </form>
  <a href="/products">Back to Products</a>
</body>
</html>
